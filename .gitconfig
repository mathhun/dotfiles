[user]
name = mathhun
email = achemer@gmail.com

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold

[color "status"]
added = yellow
changed = green bold
untracked = cyan bold

[color]
ui = auto

[core]
whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
editor = /usr/bin/vim
	excludesfile = /Users/naoto/.gitignore

[branch]
autosetupmerge = true

[alias]
st = status
ci = commit -a
cv = commit -v
br = branch
co = checkout
di = diff
lg = log -p
lp = log -p
ma = checkout master
sta = stash
stp = stash pop
unstage = reset HEAD --
last = log -1 HEAD

[push]
default = matching
